<Page xmlns="http://www.nativescript.org/tns.xsd" xmlns:drawer="nativescript-pro-ui/sidedrawer" loaded="loaded" xmlns:app="components" actionBarHidden="true">

    <drawer:RadSideDrawer drawerLocation="Right" id="sideDrawer">
        <drawer:RadSideDrawer.drawerTransition>
            <drawer:RevealTransition />
        </drawer:RadSideDrawer.drawerTransition>
        <drawer:RadSideDrawer.mainContent>

            <!-- PAGE CONTENT -->
            <GridLayout rows="auto, *, auto" columns="*" id="pagecontent" top="0" left="0" >
                <app:topbar />
                <app:appMessage />
            </GridLayout>
            <!-- /PAGE CONTENT -->

        </drawer:RadSideDrawer.mainContent>
        <drawer:RadSideDrawer.drawerContent>
            <app:drawerContent />
        </drawer:RadSideDrawer.drawerContent>
    </drawer:RadSideDrawer>

</Page>